<div {{ bem('layout-container') }}>
  {# Page Header #}
  {% block page__header %}
    {% include "@organisms/site-header/site-header.twig" %}
  {% endblock %}
  {# System #}
  {% block page__system %}{% endblock %}
  {# Skip link that points to this id is in html.html.twig #}
  <div {{ bem('main') }} id="main-content">
    <main {{ bem('main-content') }}>
      {# Main Content #}
      {% block page__content %}
        {% include "@page-layouts/placeholder/placeholder.twig" with {
          placeholder: 'Main Content',
        } %}
      {% endblock %}
    </main>
  </div>
  {# Page Footer #}
  {% block page__footer %}
    {% include "@organisms/site-footer/site-footer.twig" %}
  {% endblock %}
</div>
