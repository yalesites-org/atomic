{#
 # Available Props:
 # - site_header__theme
 # - site_header__border_thickness
 # - site_header__nav_position
 #
 # Available Variables
 # - site_name
 #
 # Available Blocks
 # - site_header__utility_nav
 # - site_header__primary_nav
 #}

{% set site_header__base_class = 'site-header' %}

{% set site_header__attributes = {
  'data-main-menu-state': 'closed',
  'data-component-width': 'max',
  'data-site-header-nav-position': site_header__nav_position|default('right'),
  'data-site-header-border-thickness': site_header__border_thickness|default('0'),
  'data-component-theme': site_header__theme|default('white'),
  class: bem(site_header__base_class),
} %}

{# Primary #}
{% set site_header__primary %}
  <div {{ bem('primary', [], site_header__base_class) }}>
    {# Site Branding #}
    {% include "@atoms/controls/text-link/text-link.twig" with {
      link__content: site_name,
      link__url: '/',
      link__base_class: 'site-branding',
      link__modifiers: ['primary'],
      link__blockname: site_header__base_class,
    } %}
    {# Primary Nav #}
    <div {{ bem('primary-nav', [], site_header__base_class) }}>
      {% block site_header__primary_nav %}
        {% include "@organisms/menu/primary-nav/primary-nav.twig" %}
      {% endblock %}
    </div>
  </div>
{% endset %}

{# Secondary #}
{% set site_header__secondary %}
  <div {{ bem('secondary', [], site_header__base_class) }}>
    {# Yale Branding #}
    {% include "@atoms/controls/text-link/text-link.twig" with {
      link__content: 'Yale University',
      link__url: 'https://www.yale.edu',
      link__base_class: 'yale-branding',
      link__blockname: site_header__base_class,
    } %}
    {# Utility Nav #}
    <div {{ bem('utility-nav', [], site_header__base_class) }}>
      {% block site_header__utility_nav %}
        {% include "@organisms/menu/utility-nav/utility-nav.twig" %}
      {% endblock %}
    </div>
  </div>
{% endset %}

<header {{ add_attributes(site_header__attributes) }}>
  <div {{ bem('inner', [], site_header__base_class) }}>
    <div {{ bem('mobile-header', [], site_header__base_class) }}>
      {# Yale Branding #}
      {% include "@atoms/controls/text-link/text-link.twig" with {
        link__content: site_name,
        link__url: '/',
        link__base_class: 'site-branding',
        link__modifiers: ['mobile'],
        link__blockname: site_header__base_class,
      } %}
      {# Mobile Menu Toggle #}
      {% include "@molecules/menu/menu-toggle/menu-toggle.twig" %}
    </div>
    <div {{ bem('menu-wrapper', [], site_header__base_class) }}>
      {# Secondary should come first on "desktop" sized screens #}
      <div {{ bem('menu-secondary', ['desktop'], site_header__base_class) }}>
        {{ site_header__secondary }}
      </div>
        {{ site_header__primary }}
      {# Secondary should come second on "mobile" sized screens #}
      <div {{ bem('menu-secondary', ['mobile'], site_header__base_class) }}>
        {{ site_header__secondary }}
      </div>
    </div>
  </div>
</header>
<div {{ bem('overlay', [], site_header__base_class) }}></div>
