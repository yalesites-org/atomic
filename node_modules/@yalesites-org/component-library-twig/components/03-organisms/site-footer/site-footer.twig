{#
 # Available Props:
 # - site_footer__theme
 # - site_footer__border_thickness
 #
 # Available Blocks
 # - site_footer__logo
 # - site_footer__text
 # - site_footer__columns
 # - site_footer__social
 #}

{% set site_footer__base_class = 'site-footer' %}

{% set site_footer__attributes = {
  'data-component-width': 'max',
  'data-site-footer-border-thickness': site_footer__border_thickness|default('0'),
  'data-component-theme': site_footer__theme|default('blue-yale'),
  class: bem(site_footer__base_class),
} %}

<footer {{ add_attributes(site_footer__attributes) }}>
  <div {{ bem('inner', [], site_footer__base_class) }}>
    {# Primary #}
    <div {{ bem('primary', [], site_footer__base_class) }}>
      {# Branding #}
      <div {{ bem('branding', [], site_footer__base_class) }}>
        {% block site_footer__logo %}
          {% include "@page-layouts/placeholder/placeholder.twig" with {
            placeholder: 'Logo',
            placeholder__type: 'element',
          } %}
        {% endblock %}
        {% block site_footer__text %}
          {% include "@page-layouts/placeholder/placeholder.twig" with {
            placeholder: 'Text',
            placeholder__type: 'element',
          } %}
        {% endblock %}
      </div>
      {# Columns #}
      <div {{ bem('columns', [], site_footer__base_class) }}>
        {% block site_footer__columns %}
          {% include "@page-layouts/placeholder/placeholder.twig" with {
            placeholder: 'Columns',
            placeholder__type: 'element',
          } %}
        {% endblock %}
      </div>
    </div>
    {# Secondary #}
    <div {{ bem('secondary', [], site_footer__base_class) }}>
      {# Social #}
      <div {{ bem('social', [], site_footer__base_class) }}>
        {% block site_footer__social %}
          {% include "@page-layouts/placeholder/placeholder.twig" with {
            placeholder: 'Social',
            placeholder__type: 'element',
          } %}
        {% endblock %}
      </div>
      {# Meta #}
      <div {{ bem('meta', [], site_footer__base_class) }}>
        {% include "@atoms/controls/text-link/text-link.twig" with {
          link__content: 'Accessibility at Yale',
          link__url: "https://usability.yale.edu/web-accessibility/accessibility-yale",
          link__style: ['no-underline'],
        } %}
        <span {{ bem('divider', [], site_footer__base_class) }}>|</span>
        {% include "@atoms/controls/text-link/text-link.twig" with {
          link__content: 'Privacy Policy',
          link__url: "https://www.yale.edu/privacy-policy",
          link__style: ['no-underline'],
        } %}
        <span {{ bem('divider', [], site_footer__base_class) }}>|</span>
        <span>Copyright Â© {{ 'now'|date('Y') }} Yale University. All rights reserved.</span>
      </div>
    </div>
  </div>
</footer>
