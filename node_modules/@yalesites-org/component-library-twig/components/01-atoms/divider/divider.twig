{#
 # Available Variables:
 # - divider__width: available options are 100% (default), 75%, 50%, and 25%
 # - divider__thickness: available options are 1 (default), 2, 3, 4, 5, and 6
 # - divider__position: available options are center (default), left, and right
 #}

{% set divider__base_class = 'divider' %}

{% set divider__wrapper__attributes = {
  'data-component-width': 'max',
  'data-divider-position': divider__position|default('center'),
  class: bem('wrapper', [], divider__base_class),
} %}

{% set divider__attributes = {
  'data-divider-thickness': divider__thickness|default('1'),
  'data-divider-width': divider__width|default('100%'),
  class: bem(divider__base_class),
} %}

<div {{ add_attributes(divider__wrapper__attributes) }}>
  <div {{ bem('inner', [], divider__base_class) }}>
    <div {{ add_attributes(divider__attributes) }}></div>
  </div>
</div>
