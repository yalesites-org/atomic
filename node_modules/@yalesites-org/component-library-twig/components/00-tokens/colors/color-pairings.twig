{% set color_pairing__base_class = 'cl-color-pairing' %}

{% for theme, value in _context.themes %}
  <div {{ bem(color_pairing__base_class) }} data-component-theme={{ theme }}>
    <h2>Component Theme: {{ theme }}</h2>
    <p class="text-field">Here's a paragraph with some text. And <a href="#">links can go here</a> too. Isn't that cool?</p>
    <div class="cta-group">
      {% include "@atoms/controls/cta/cta.twig" with {
        cta__content: 'Cta Link',
        cta__href: '#',
      } %}
      {% include "@atoms/controls/cta/cta.twig" with {
        cta__content: 'Outline',
        cta__style: 'outline',
        cta__href: '#',
      } %}
    </div>
  </div>
{% endfor %}
