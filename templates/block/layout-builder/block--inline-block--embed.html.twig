{% extends "@atomic/block/layout-builder/_layout-builder-block-template.twig" %}

{% block content %}

  {% if parentNode == 'post' or parentNode == 'event' %}
    {% set embed__width = "content" %}
  {% else %}
    {% set embed__width = "site" %}
  {% endif %}

  {% embed "@molecules/embed/yds-embed.twig" with {
    embed__width: embed__width,
    embed__padding_options: padding_options|default('default'),
  }%}

    {% block embed__block %}
      {{ content }}
    {% endblock %}

  {% endembed %}

{% endblock %}
