{% extends "@atomic/block/layout-builder/_layout-builder-block-template.twig" %}

{% block content %}
  {% if parentNode == 'post' or parentNode == 'event' %}
    {% set content_image__width = "content" %}
    {% set content_image__alignment = "center" %}
  {% else %}
    {% set content_image__width = "site" %}
    {% set content_image__alignment = "left" %}
  {% endif %}

  {% embed "@molecules/image/yds-content-image.twig" with {
    content_image__caption: content.field_text.0,
    content_image__width: content_image__width|default('content'),
    content_image__alignment: content_image__alignment|default('center'),
  } %}

    {% block content_image__image %}
      {{ content.field_media }}
    {% endblock %}

  {% endembed %}

{% endblock %}
