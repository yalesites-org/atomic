<div data-collection-featured="true" data-collection-type="list" data-component-width="site" class="card-collection">
  <div class="card-collection__inner">
    {% if title %}
      <h2 class="card-collection__heading">
        {{ title }}
      </h2>
    {% endif %}
    <ul class="card-collection__cards">
      {% for row in rows %}
        {{- row.content -}}
      {% endfor %}
    </ul>
  </div>
</div>
