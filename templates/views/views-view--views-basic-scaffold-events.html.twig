{{ attach_library('ys_views_basic/ys_views_basic') }}
{% set type = view.rowPlugin.options['view_mode'] == 'list_item' ? 'list' : 'grid' %}

{% set dom_id_class = dom_id ? 'js-view-dom-id-' ~ dom_id %}

<section class={{ dom_id_class }} aria-label="{{ section_aria_label }}">
  {{ title_prefix }}
  {{ title }}
  {{ title_suffix }}

  {% if header %}
    <header>
      {{ header }}
    </header>
  {% endif %}

  {{ attachment_before }}

  {% if rows -%}
    {{ rows }}
  {% elseif empty -%}
    {{ empty }}
  {% endif %}
  {{ pager }}

  {{ attachment_after }}
  {{ more }}

  {% if footer %}
    <footer>
      {{ footer }}
    </footer>
  {% endif %}

  {{ feed_icons }}
</section>
